<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:text="상품정보"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="43dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/picture"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:id="@+id/productinpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="케냐산 원두"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <TextView
                    android:text="원산지 케냐"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/discountrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#FB796E"
                        android:layout_below="@+id/productname"/>

                <TextView
                    android:id="@+id/discountprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,600원"
                    android:layout_toRightOf="@+id/discountrate"
                    android:layout_below="@+id/productname"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/originalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11,200원"
                    android:layout_toRightOf="@+id/discountprice"
                    android:layout_below="@+id/productname"
                    android:textSize="18dp"
                    android:textColor="#B5B5B5"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"/>

                    <View
                        android:layout_width="45dp"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
android:layout_above="@+id/originalprice"
                        android:layout_marginTop="35.5dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/productinpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="32dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="케냐산 원두입니다. 향이 깊고 진합니다.
케냐산 원두입니다. 향이 깊고 진합니다.
케냐산 원두입니다. 향이 깊고 진합니다."
                    android:textSize="12dp"
                    android:textColor="#000000" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/seller_pic"
                    android:src="@drawable/seller_pic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:text="준우랜드"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/seller_pic"/>

                <TextView
                    android:text="30"
                    android:layout_toLeftOf="@+id/ondate"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:textColor="#FB8D84"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/ondate"
                    android:text="일 남은 상품"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/productaddress"
                        android:text="서울특별시 강북구 삼양로"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/distance"
                        android:text="500m"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="17dp"
                        android:layout_height="26dp"
                        android:textColor="#FB796E"
                        android:textSize="12dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_toLeftOf="@+id/distance"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/run_icon_small"
                        />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="17dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginTop="60dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:text="준우랜드 MENU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/review"
                    android:text="준우랜드 후기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:text="4"
                    android:layout_toLeftOf="@id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp" />


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="97dp"
                    android:layout_height="16dp" />

                <ImageButton
                    android:id="@+id/entergreen"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:src="@drawable/entergreen" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:src="@drawable/basket_b"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

        <ImageButton
            android:src="@drawable/buy_b"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>