<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:text="상품 등록"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

            </RelativeLayout>
    </RelativeLayout>
    //background color
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="194dp">

                    <ImageView
                        android:src="@drawable/picture_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>

            <Spinner
                android:id="@+id/spinner"
                android:entries="@array/분류"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_stroke"
                android:spinnerMode="dialog" />

            <EditText
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="@drawable/custom_stroke"
                android:hint="상품명"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                >

                <ImageView
                    android:id="@+id/register_calander_iv"
                    android:src="@drawable/calender_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/register_calander_iv"
                    android:text="유통기한"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    />
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:hint="17/07/2017"
                android:background="@drawable/custom_stroke"
                >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/clock_icon_x" />
                <TextView
                    android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="타임세일을 하고 싶다면 눌러주세요!"
                    android:gravity="center"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
        <Spinner
            android:id="@+id/startTime"
            android:entries="@array/시작시각"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/timesale_one"
            android:spinnerMode="dialog" />

        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:src="@drawable/wave"/>

        <Spinner
            android:layout_marginLeft="13dp"
            android:id="@+id/endTime"
            android:entries="@array/마감시각"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/timesale_two"
            android:spinnerMode="dialog" />
</LinearLayout>
</LinearLayout>
